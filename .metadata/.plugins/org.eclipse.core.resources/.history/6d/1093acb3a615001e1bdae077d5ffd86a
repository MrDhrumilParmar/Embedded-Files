void updateVal(int* top_val,int adc_val){
	for(uint8_t counter = 1; counter <100;counter++){
		top_val[counter-1] = top_val[counter];
	}
	top_val[99] = adc_val;
}
int averageVal(int* top_val){
sum =0;
	for (int i = 0; i < 100; i++) {
	    sum += top_val[i];
	}
return sum/100;
}
